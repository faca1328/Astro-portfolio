---
import { Icons } from "./Icons";
import cssIcon from "../../public/icons8-css.svg"
import tailwindIcon from "../../public/icons8-viento-de-cola-css.svg"
import astroIcon from "../../public/icons8-astro.svg"
import fireBaseIcon from "../../public/icons8-firebase.svg"
import sassIcon from "../../public/icons8-hablar-con-descaro-a.svg"
import mySqlIcon from "../../public/icons8-logo-de-mysql.svg"
import tsIcon from "../../public/icons8-mecanografiado.svg"
import nodeIcon from "../../public/icons8-nodo-js.svg"
import viteIcon from "../../public/icons8-rápidamente.svg"
import reactIcon from "../../public/icons8-reaccionar.svg"
import bgImg from "../../public/bgimg.jfif"
import reduxImg from "../../public/icons8-redux.svg"

const langMode = true

---

<div class="flex w-screen relative h-[35rem] min-h-fit">
  <div class=" flex-1 bg-zinc-700 relative max-phone:h-full">

    <div class=" rounded-r-[30%] absolute w-[40%] z-50 -left-6 h-full items-center font-serif max-md:hidden bg-cover bg-no-repeat" style={{ backgroundImage: `url(${bgImg})` }}>
    </div>

      <div class="w-[50%] h-fit absolute top-[20%] right-12 max-md:w-[85%] max-sm:top-[10%] max-phone:top-4 max-phone:-left-6 max-phone:text-center text-center">
        <div >
            <h1 class=" text-4xl py-1 font-bold">
            {langMode ?
            (<>
              Mis tecnologías con más experiencia:
            </>) :
            (<>                  
              My main skills are:
            </>)}
            </h1>
            <div class="flex justify-between w-[75%] mx-auto mt-9 flex-wrap">
              <Icons icon={reactIcon} name={'React'} client:visible/>
              <Icons icon={viteIcon} name={'Vite'} client:visible/>
              <Icons icon={tsIcon} name={'TS'} client:visible/>
              <Icons icon={tailwindIcon} name={'Tailwind'} client:visible/>
              <Icons icon={reduxImg} name={'Redux Toolkit'} client:visible/>
            </div>
          </div>
          <div class="mt-10 items-center ">
            <p class="text-2xl mt-14 py-1 font-bold">
            {langMode ?
            (<>
              También soy competente con:
            </>) :
            (<>                  
              Additionally, I am proficient with:
            </>)}
            </p>
            <div class="flex items-center mt-9 justify-between flex-wrap">
              <Icons icon={cssIcon} name={'CSS'} client:visible/>
              <Icons icon={sassIcon} name={'Sass'} client:visible/>
  
              <Icons icon={fireBaseIcon} name={'FireBase'} client:visible/>
              <Icons icon={mySqlIcon} name={'MySql'} client:visible/>
  
              <Icons icon={astroIcon} name={'Astro'} client:visible/>
              <Icons icon={nodeIcon} name={'NodeJs'} client:visible/>
            </div>
      </div>
    </div>    
        
    
  </div>


